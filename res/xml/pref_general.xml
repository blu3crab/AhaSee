<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="@string/pref_key_location"
        android:title="@string/pref_title_location"
        android:defaultValue="@string/pref_default_location"
        android:summary="@string/pref_description_location"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:key="@string/pref_key_period"
        android:title="@string/pref_title_period"
        android:defaultValue="@string/pref_default_period"
        android:summary="@string/pref_description_period"
        android:entries="@array/pref_period_list_entries"
        android:entryValues="@array/pref_period_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="@string/pref_key_dups"
        android:title="@string/pref_title_dups"
        android:defaultValue="@string/pref_default_dups"
        android:summary="@string/pref_description_dups"
        android:entries="@array/pref_dups_list_entries"
        android:entryValues="@array/pref_dups_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

