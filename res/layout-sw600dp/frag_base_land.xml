<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:background="#00FF00"
              tools:context="com.adaptivehandyapps.ahasee.SeeActivity$PlaceholderFragment">

    <!-- L1 title -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/title">

        <TextView
            android:id="@+id/textViewTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Green Button Export for "
            android:textColor="@color/brightgreen"/>
        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="PLUM CREEK DR, GAITHERSBURG, MD 20882"
            android:textColor="@color/aquagreen"/>

        <TextView
            android:id="@+id/textViewTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="Energy Delivered Hourly: "
            android:textColor="@color/brightgreen"/>
        <TextView
            android:id="@+id/textViewFromToDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="01/01/2014 to 02/15/2015"
            android:textColor="@color/aquagreen"/>

    </LinearLayout>
    <!-- L1 chart/details -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:id="@+id/chart_details">

        <!-- L2 major chart -->
        <LinearLayout
            android:id="@+id/chart_major"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey">
        </LinearLayout>
        <!-- L2 details android:background="@color/grey"-->
        <LinearLayout
            android:id="@+id/details"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/detail_text">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/labels">

                    <TextView
                        android:id="@+id/textViewTotalDayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/total_day_label"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/textViewAveDayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/ave_day_label"
                        android:textColor="@color/aquagreen"/>

                    <TextView
                        android:id="@+id/textViewPeakDayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/peak_day_label"
                        android:textColor="@color/aquagreen"/>

                    <TextView
                        android:id="@+id/textViewLowDayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/low_day_label"
                        android:textColor="@color/aquagreen"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:id="@+id/info">

                    <TextView
                        android:id="@+id/textViewTotalDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="120 KwH"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/textViewAveDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="5 Kwh"
                        android:textColor="@color/red"/>

                    <TextView
                        android:id="@+id/textViewPeakDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="10 Kwh"
                        android:textColor="@color/red"/>

                    <TextView
                        android:id="@+id/textViewLowDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="1 KwH"
                        android:textColor="@color/brightgreen"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp">

                <CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="256dp"
                    android:layout_height="256dp"
                    android:minDate="01/01/2014"
                    android:maxDate="12/31/2015"
                    android:background="@color/lightgrey"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginLeft="32dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <!-- L1 controls -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:layout_marginBottom="0dp"
        android:id="@+id/controls"
        android:visibility="visible">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            >

            <Button
                android:id="@+id/buttonShowAnalysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="@string/baseline_button_show_analysis"
                />

            <TextView
                android:id="@+id/textViewAlgoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/baseline_algo_label"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

            <Spinner
                android:id="@+id/spinnerAlgo"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:entries="@array/spinnerAlgoItems"
                android:gravity="center"
                android:background="@color/lightgrey"
                android:popupBackground="@color/lightgrey"
                />
            <TextView
                android:id="@+id/textViewDaysLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/baseline_days_label"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

            <Spinner
                android:id="@+id/spinnerDays"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:entries="@array/spinnerDaysItems"
                android:gravity="center"
                android:background="@color/lightgrey"
                android:popupBackground="@color/lightgrey"
                />

            <Button
                android:id="@+id/buttonSaveBaseline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/baseline_button_save_baseline"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

            <Button
                android:id="@+id/buttonShowBaseline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/baseline_button_show_baseline"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>