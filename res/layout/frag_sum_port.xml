<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:background="#00FF00"
              tools:context="com.adaptivehandyapps.ahasee.SeeActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/textViewPleaseRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Please refresh your GreenButton data."
        android:textColor="@color/red"
        android:enabled="false"
        android:visibility="gone"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <!-- L1 title -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/title">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Green Button Export for "
                android:textColor="@color/brightgreen"/>
            <TextView
                android:id="@+id/textViewLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="PLUM CREEK DR, GAITHERSBURG, MD 20882"
                android:textColor="@color/aquagreen"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewTitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="Energy Delivered Hourly: "
                android:textColor="@color/brightgreen"/>
            <TextView
                android:id="@+id/textViewFromToDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="01/01/2014 to 02/15/2015"
                android:textColor="@color/aquagreen"/>
        </LinearLayout>

    </LinearLayout>

    <!-- L1 chart/details -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/chart_details">

        <!-- L2 major chart -->
        <LinearLayout
            android:id="@+id/chart_major"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey">
        </LinearLayout>
    </LinearLayout>
    <!-- L1 controls -->
    <LinearLayout
        android:id="@+id/controls"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_marginBottom="0dp"
        android:visibility="visible">

        <RadioGroup
            android:id="@+id/radioKwhDollar"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical|top"
            >

            <RadioButton
                android:id="@+id/radioKwh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KwH"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radioDollar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$$$"/>

        </RadioGroup>

        <TextView
            android:id="@+id/progressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Feed Progress"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:background="@color/lightgrey"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Feed:"
                android:id="@+id/textView2"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

            <Spinner
                android:id="@+id/spinnerFeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:spinnerMode="dropdown"
                android:entries="@array/spinnerFeedItems"
                android:background="@color/lightgrey"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            >

            <Button
                android:id="@+id/buttonRefresh"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/summarize_button_refresh"
                />

            <Button
                android:id="@+id/buttonRemove"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/summarize_button_remove"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        </LinearLayout>

    </LinearLayout>

    <!-- L1 details -->
<!--    <fragment
        android:id="@+id/fragment_detail"
        android:name="com.adaptivehandyapps.ahasee.TabSummDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        />
-->

</LinearLayout>